platform :ios, '12.0' # Ensure the platform matches your deployment target

# CocoaPods analytics disabled
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter integration
flutter_application_path = File.expand_path('..', __dir__) # Use absolute path
load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

target 'Runner' do
  use_frameworks! # Required for Firebase and other modern dependencies
  use_modular_headers!

  # Add Firebase dependencies
  pod 'Firebase/Core'
  pod 'Firebase/Crashlytics'

  # Integrate Flutter
  install_all_flutter_pods(flutter_application_path)
end

# Post-install script to ensure compatibility
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end
  end
end
