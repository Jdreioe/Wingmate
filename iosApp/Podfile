platform :ios, '14.0'
use_frameworks! :linkage => :static

inhibit_all_warnings!

# CocoaPods workspace for the Swift iOS app that consumes the KMP framework "Shared".
target 'iosApp' do
  # If you keep this Podfile inside iosApp/, this path points to the KMP module folder.
  # Pod name must match spec.name in shared/shared.podspec (lowercase 'shared').
  pod 'shared', :path => '../shared'
end

post_install do |installer|
  # Keep deployment target consistent and silence some common warnings.
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      # Optional, can help when distributing prebuilt frameworks.
      # config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end
